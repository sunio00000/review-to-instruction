{
  "manifest_version": 3,
  "name": "Review to Instruction",
  "version": "1.3.0",
  "description": "GitHub/GitLab 리뷰 코멘트를 AI agents용 instruction/skills로 자동 변환하는 Chrome Extension",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://gitlab.com/*",
    "https://git.projectbro.com/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/pull/*",
        "https://gitlab.com/*/-/merge_requests/*",
        "https://git.projectbro.com/*/-/merge_requests/*",
        "http://localhost:3002/*"
      ],
      "js": [
        "src/content/main.ts"
      ]
    }
  ],
  "optional_host_permissions": [
    "https://*/*/-/merge_requests/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/locked/locked_16.png",
      "32": "icons/locked/locked_32.png",
      "48": "icons/locked/locked_48.png",
      "128": "icons/locked/locked_128.png"
    }
  },
  "icons": {
    "16": "icons/locked/locked_16.png",
    "32": "icons/locked/locked_32.png",
    "48": "icons/locked/locked_48.png",
    "128": "icons/locked/locked_128.png"
  }
}
