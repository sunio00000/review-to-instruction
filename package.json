{
  "name": "review-to-instruction",
  "version": "1.0.0",
  "description": "Chrome Extension to convert GitHub/GitLab PR review comments into AI-readable instructions and skills",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "chrome-extension",
    "github",
    "gitlab",
    "ai",
    "claude-code"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.3.0",
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@types/chrome": "^0.1.33",
    "@types/express": "^5.0.6",
    "@vitest/coverage-v8": "^4.0.17",
    "@vitest/ui": "^4.0.17",
    "express": "^5.2.1",
    "happy-dom": "^20.3.4",
    "jsdom": "^27.4.0",
    "msw": "^2.12.7",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.17"
  }
}
